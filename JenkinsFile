pipeline{
	agent{ label 'linux'}
	tools{
		maven 'M3'
	}
	stages{
		stage('checkout'){
			steps{
				git 'https://github.com/gunaseelanDuraisamy/Demo.git'
			}
		}
		stage('Build'){
			steps{
				bat 'mvn clean compile'
			}
		}
		stage('Test'){
			steps{
				bat 'mvn test'
				junit '**/target/surfire-reports/Test-*.xml'
			}
		}
		stage('Package'){
			steps{
			 	bat 'mvn package'
			}
		}
	}

}
